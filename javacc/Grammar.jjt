void DotMethod() #DotMethod: {}
{
    <LENGTH>
    | <IDENTIFIER>
        <OPENCURVEBRACKET>
            [RootExpression()
            (<COMMA> RootExpression())*]
        <CLOSECURVEBRACKET>
}

void ArrayAccess() #ArrayAccess: {Token b; }
{
try{
    <OPENSQUAREBRACKET> EndExpression()  <CLOSESQUAREBRACKET>
    }
    catch(Exception a){
        System.out.println("Here");

    }
}

void EndExpression() #void: {}
{
    EndValue()
    | NewExpression()
    | ParentesisExpression()
}

void EndValue() #void: {}
{
    <INTEGERLITERAL>
    | <TRUE>
    | <FALSE>
    | <IDENTIFIER>
    | <THIS>
}

void NewExpression() #void: {}
{
    <NEW> (<INT> <OPENSQUAREBRACKET> RootExpression() <CLOSESQUAREBRACKET>
        | <IDENTIFIER> <OPENCURVEBRACKET> <CLOSECURVEBRACKET>)
}

void ParentesisExpression() #void: {}
{
    <OPENCURVEBRACKET> RootExpression() <CLOSECURVEBRACKET>
}

void Statement() #void: {}
{
    <OPENBRACKET> (Statement())* <CLOSEBRACKET>
    | IfElseStatement()
    | WhileStatment()
    // TODO: error with a[2] = a.length; or a = a[2].length;
    | LOOKAHEAD(2) RootExpression() <SEMICOLON>
    | LOOKAHEAD(2) <IDENTIFIER> (Assignment() <SEMICOLON> | <OPENSQUAREBRACKET> RootExpression() <CLOSESQUAREBRACKET> <EQUALS> RootExpression() <SEMICOLON>)

}

void IfElseStatement() #void: {}
{
    <IF> <OPENCURVEBRACKET> RootExpression() <CLOSECURVEBRACKET> Statement() <ELSE> Statement()
}

void Assignment() #void: {}
{
    <EQUALS> RootExpression()
}

